<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.noticemedan.cinema.view.LeftBarView"
            fx:id="LeftAnchor"
            styleClass="PickInfo">
    <Label text="Pick a date" layoutX="35.0" layoutY="35.0"/>
    <DatePicker styleClass="input" fx:id="pickDate" onAction="#updateSelectionByDate" layoutX="35.0" layoutY="55.0" promptText="Date" />
    <Label text="Pick a movie" layoutX="35.0" layoutY="135.0"/>
    <ComboBox styleClass="input" fx:id="pickMovie" onAction="#updateSelectionByMovie" layoutX="35.0" layoutY="155.0"  promptText="Movie" />
    <Label text="Pick a time" layoutX="35.0" layoutY="235.0"/>
    <ComboBox styleClass="input" fx:id="pickTime" onAction="#updateSelectionByMovie" layoutX="35.0" layoutY="255.0" promptText="Time" />
</AnchorPane>
