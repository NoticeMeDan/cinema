<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<BorderPane prefHeight="740" prefWidth="960" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.noticemedan.cinema.controller.UIController">
    <!-- Top Pane.
    This will contain-->
    <top>
        <GridPane alignment="BASELINE_RIGHT" hgap="10" vgap="10" minHeight="50">

            <DatePicker fx:id="pickDate" promptText="Pick a date" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <ComboBox fx:id="pickMovie" promptText="Pick a movie" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="The Movie, Movie" />
                        <String fx:value="Movie 2" />
                        <String fx:value="Movie 3" />
                    </FXCollections>
                </items>
            </ComboBox>
        </GridPane>
    </top>

    <left>

        <GridPane alignment="BASELINE_LEFT" hgap="2" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <SplitPane orientation="VERTICAL" prefHeight="500.0" prefWidth="160.0">
                <items>
                    <AnchorPane maxHeight="70.0" prefWidth="42.0">
                        <children>
                            <TextField maxWidth="150" text="Insert number" />
                            <Button fx:id="enterPhoneNumber" text="Enter" layoutY="30" />
                        </children>
                    </AnchorPane>

                    <AnchorPane minHeight="300" minWidth="0.0"   >
                        <children>
                            <Button fx:id="newBooking" text="New booking" />
                            <Button fx:id="booking1" text="The Movie, movie" />
                        </children>
                    </AnchorPane>

                    <AnchorPane>
                        <Button fx:id="addBooking" text="+"/>
                    </AnchorPane>
                </items>
            </SplitPane>
        </GridPane>
    </left>

    <center>
        <SplitPane orientation="VERTICAL" prefHeight="500.0" prefWidth="160.0">
            <items>
                <AnchorPane  maxHeight="50" prefWidth="42.0">
                    <children>
                        <ComboBox fx:id="numberOfSeats" promptText="Seats" layoutY="5" >
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="1"/>
                                    <String fx:value="2"/>
                                    <String fx:value="3"/>
                                    <String fx:value="4"/>
                                    <String fx:value="5"/>
                                    <String fx:value="6"/>
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="300" minWidth="0.0"   >
                    <children>

                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
    <right>

    </right>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT">
            <Button fx:id="submitChange" text="Submit changes" />
            <Button fx:id="cancelChange" text="Cancel changes" />

        </HBox>


    </bottom>
</BorderPane>
